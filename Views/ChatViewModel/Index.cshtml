@model IEnumerable<HealthCareApp.Models.ChatViewModel>

@{
    ViewData["Title"] = "Chat";
}

<div class="container mt-5">
    <h1>Chat Page</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">New Chat</a>
    </p>
    <div class="row">
        <div class="col-md-9 offset-md-2">
            <div class="card">
                <div class="card-header">
                    Chat History
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    
                                    <th>Doctor</th>
                                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                    <th>@Html.DisplayNameFor(model => model.Message)</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                  

                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.DoctorUserName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Message)</td>
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Actions">
                                                    <a href="#" class="btn btn-sm btn-info">Reply</a>
                                                    <a href="#" class="btn btn-sm btn-info">Edit</a>
                                                    <a href="#" class="btn btn-sm btn-info">Detail</a>
                                                    <a href="#" class="btn btn-sm btn-info">Delete</a>

                                                </div>
                                            </td>
                                        </tr>
                                    
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/closealertauthomatically.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

